{
  "name": "quiron-cdk",
  "private": true,
  "version": "0.0.0",
  "description": "⚕️Component development kit library for Quiron Web",
  "workspaces": [
    "pkg/*",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run dev --workspace",
    "dev:examples:angular": "npm run start --workspace examples/angular",
    "build": "npm run build --workspace",
    "release": "npm run release --workspace",
    "test": "vitest",
    "test:run": "vitest run --passWithNoTests",
    "lint": "eslint . --ext .ts --fix"
  },
  "lint-staged": {
    "*.ts": "eslint . --ext .ts"
  },
  "author": "Ekisa Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "happy-dom": "^2.45.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tsup": "^5.12.4",
    "typescript": "^4.6.3",
    "vitest": "^0.8.3"
  }
}
